<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/lakewinnipesaukee"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Chat">

    <EditText
        android:id="@+id/message"
        android:textColor="#ffffff"
        android:hint="Your message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/send"
        android:layout_toStartOf="@+id/send"
        android:imeOptions="actionSend"/>

    <Button
        android:id="@+id/send"
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_below="@+id/scrollView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="4dp"

        >
    <ImageButton

        android:id="@+id/btnPower"
        android:src="@drawable/easycover_power"
        android:background="@drawable/roundcorner"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:backgroundTint="#ffffff"
        android:text="POWER"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="57dp"
        android:layout_width="90dp"
        android:layout_height="80dp"
        />

        <ImageButton
         android:id="@+id/btnCover"
         android:src="@drawable/pontoon_easycover_cover"
         android:background="@drawable/roundcorner"
         android:padding="0dp"
         android:scaleType="fitCenter"
         android:backgroundTint="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_marginRight="57dp"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r2"
        android:layout_below="@+id/r1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="4dp"
        >

        <ImageButton
            android:id="@+id/btnBridge"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/roundcorner"
            android:backgroundTint="#ffffff"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pontoon_easycover_bridge"
            android:text="BRIDGE"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/btnDouble"
            android:padding="0dp"
            android:background="@drawable/roundcorner"
            android:scaleType="fitCenter"
            android:src="@drawable/pontoon_easycover_double"
            android:backgroundTint="#ffffff"
            android:text="DOUBLEBIM"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginRight="57dp"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r3"
        android:layout_below="@+id/r2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="4dp"
        >

        <ImageButton
            android:id="@+id/btnBimini"
            android:padding="0dp"
            android:background="@drawable/roundcorner"
            android:scaleType="fitCenter"
            android:src="@drawable/pontoon_easycover_bimini"
            android:backgroundTint="#ffffff"
            android:text="BIMINI"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="57dp"
            android:layout_width="90dp"
            android:layout_height="80dp" />

        <ImageButton
            android:src="@mipmap/btnhornvolup"

            android:id="@+id/btnHornVolUP"
            android:scaleType="fitCenter"
            android:backgroundTint="#ffffff"
            android:textColor="#000000"
            android:layout_width="98dp"
            android:layout_height="45dp"

            android:layout_alignParentEnd="true"
            android:layout_marginRight="54dp"

            />
        <ImageButton
            android:src="@mipmap/btnhornvoldownq"
            android:id="@+id/btnHornVolDOWN"
            android:scaleType="fitCenter"
            android:backgroundTint="#ffffff"
            android:layout_width="98dp"
            android:layout_height="45dp"
            android:textColor="#000000"
            android:layout_alignLeft="@id/btnHornVolUP"
            android:layout_below="@id/btnHornVolUP"

            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r4"
        android:layout_below="@+id/r3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >


        <ToggleButton
            android:id="@+id/OpLogTog"
            android:textOn="Op Log On"
            android:textOff="Op Log Off"
            android:backgroundTint="#ffffff"
            android:textColor="#000000"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"

             />
    </RelativeLayout>
    <ScrollView

        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/text"
            android:backgroundTint="#ffffff"
            android:textColor="#ffffff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom" />
    </ScrollView>

</RelativeLayout>
