<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onthewater"
    tools:context="me.aflak.bluetoothterminal.PIN">
    <EditText
        android:id="@+id/PIN"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:hint="Please enter your PIN"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"/>
    <Button
        android:id="@+id/Enter"
        android:text="Enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/PIN"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/textview"
        android:textColor="#ffffff"
        android:text="eg 123456, 000000 \nDefault Passcode is 123456\nMinimum PIN length is 6 digits."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PIN"
        android:layout_alignLeft="@+id/PIN"
        android:layout_alignStart="@+id/PIN"
        />

</RelativeLayout>
